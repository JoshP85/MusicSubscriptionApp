@model MusicSubscriptionApp.Models.AppUser
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <div class="container text-start">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h4 class="card-title text-center mb-5 fw-bold fs-2">Music Subcription Online</h4>
                        <h4 class="card-title text-center mb-2 fw-light fs-3">Sign In</h4>
                        <form asp-controller="Home" asp-action="Index">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="text" class="form-control" id="floatingInput" placeholder="Email">
                                <label for="floatingInput">Email</label>
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                                <label for="floatingPassword">Password</label>
                            </div>
                            @Html.ValidationMessage("LoginFailed", new {@class = "text-danger"})
                            <div class="w-50 m-auto">
                                <div class="d-grid mt-5">
                                    <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign in</button>
                                </div>
                                <div class="d-grid mt-2 ">
                                    <a class="btn btn-primary btn-login text-uppercase fw-bold"  asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
